{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install-pkgs",
            "command": "uv sync",
            "type": "shell"
        },
        {
            "label": "install-pre-commit",
            "command": "uv run pre-commit install",
            "type": "shell"
        },
        {
            "label": "install",
            "dependsOn": ["install-pkgs", "install-pre-commit"],
            "dependsOrder": "sequence"
        },
        {
            "label": "pre-commit",
            "command": "uv run pre-commit run --all-files",
            "type": "shell",
            "dependsOn": ["install-pkgs"]
        },
        {
            "label": "configure.py",
            "command": "pyinfra inventory.py configure.py",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}${/}software"}
        },
        {
            "label": "update.py",
            "command": "pyinfra inventory.py update.py",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}${/}software"}
        },
        {
            "label": "force-sync",
            "command": "flux reconcile source git flux-system && flux reconcile kustomization flux-system -n flux-system",
            "type": "shell"
        }
    ]
}