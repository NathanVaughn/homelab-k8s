{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            // renovate: depName=kubernetes packageName=kubernetes/kubernetes
            "version": "1.34.1",
            // renovate: depName=helm packageName=helm/helm
            "helm": "3.19.0",
            // renovate: depName=minikube packageName=kubernetes/minikube
            "minikube": "1.37.0"
        },
        "ghcr.io/jsburckhardt/devcontainer-features/flux:1": {
            // renovate: depName=flux2 packageName=fluxcd/flux2
            "version": "v2.8.1"
        },
        "ghcr.io/gickis/devcontainer-features/kubeseal:1": {
            // renovate: depName=sealed-secrets packageName=bitnami-labs/sealed-secrets
            "version": "0.32.2"
        },
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                "github.vscode-github-actions",
                "spywhere.guides",
                "yzhang.markdown-all-in-one",
                "DavidAnson.vscode-markdownlint",
                "ms-python.python",
                "charliermarsh.ruff",
                "sourcery.sourcery",
                "actboy168.tasks",
                "shardulm94.trailing-spaces",
                "redhat.vscode-yaml",
                "twixes.pypi-assistant",
                "ms-kubernetes-tools.vscode-kubernetes-tools"
            ]
        }
    },
    "mounts": [
        "source=devcontainer-profile-${containerWorkspaceFolderBasename},target=/home/dev/,type=volume"
    ]
}