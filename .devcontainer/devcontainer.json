{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "version": "1.34.1", // https://github.com/kubernetes/kubernetes/releases
            "helm": "3.19.0", // https://github.com/helm/helm/releases
            "minikube": "1.37.0" // https://github.com/kubernetes/minikube/releases
        },
        "ghcr.io/jsburckhardt/devcontainer-features/flux:1": {
            "version": "v2.7.2" // https://github.com/fluxcd/flux2/releases
        },
        "ghcr.io/gickis/devcontainer-features/kubeseal:1": {
            "version": "0.32.2" // https://github.com/bitnami-labs/sealed-secrets/releases
        },
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                "github.vscode-github-actions",
                "spywhere.guides",
                "yzhang.markdown-all-in-one",
                "DavidAnson.vscode-markdownlint",
                "ms-python.python",
                "charliermarsh.ruff",
                "sourcery.sourcery",
                "actboy168.tasks",
                "shardulm94.trailing-spaces",
                "redhat.vscode-yaml",
                "twixes.pypi-assistant",
                "ms-kubernetes-tools.vscode-kubernetes-tools"
            ]
        }
    },
    "mounts": [
        "source=devcontainer-profile-${containerWorkspaceFolderBasename},target=/home/dev/,type=volume"
    ]
}